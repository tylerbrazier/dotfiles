# https://github.com/vivien/i3blocks
#
# font-awesome is required to see the button icons.
# http://fontawesome.io/cheatsheet shows icons with their unicode values.
# In vim, see :help i_CTRL-V_digit on how to enter hexidecimal unicode values.

[chromium]
# fa-chrome x0000f268
full_text=
color=#4488ff
command=chromium >/dev/null
separator=false

[firefox]
# fa-firefox x0000f269
full_text=
color=#ff6700
command=firefox >/dev/null
separator=false

[urxvt]
# fa-terminal x0000f120
full_text=
color=#00ff00
command=urxvt >/dev/null

[volume]
# unicode eighth x0000266a
label=♪
command=/usr/lib/i3blocks/volume
interval=once
signal=1

[ethernet]
command=~/.config/i3blocks/net.sh en
interval=10

[wifi]
command=~/.config/i3blocks/net.sh wl
interval=10

[battery]
command=~/.config/i3blocks/bat.sh
interval=10

[datetime]
command=test -z $BLOCK_BUTTON || date '+%F' | xsel -b; date '+%F %H:%M'
interval=10

[power]
# fa-power-off x0000f011
full_text=
command=i3-msg -q mode $(i3-msg -t get_binding_modes | grep -oi '"bye[^"]*"')
