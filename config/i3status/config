# i3status config should be edited as UTF-8
# The following should display as a sharp s: ß

general {
        interval = 5
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
order += "time"

wireless _first_ {
        format_up = "%quality %essid %ip"
        format_down = ""
}

ethernet _first_ {
        format_up = "%ip"
        format_down = ""
}

battery all {
        format = "%status %percentage %remaining"
        format_down = ""
        status_chr = "⚡"
        status_bat = "±"
        status_unk = "?"
        status_full = "⚡"
        integer_battery_capacity = true
        hide_seconds = true
}

volume master {
        format = "♪ %volume"
        format_muted = "♪ %volume mute"
}

time {
        format = "%Y-%m-%d %H:%M"
}
