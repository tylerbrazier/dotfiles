# Based on the default i3status config (diff with /etc/i3status.conf)
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        interval = 1

        colors = true

        color_good =     "#00ff80"
        color_degraded = "#ff8000"
        color_bad =      "#ff0000"
}

order += "volume master"
order += "battery all"
#order += "load"
order += "cpu_usage"
order += "memory"
#order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "tztime local"

volume master {
        format = "V: %volume"
        format_muted = "V: %volume muted"
}

wireless _first_ {
        format_up = "W: %quality %essid"
        format_quality = "%d%s"
        format_down = ""
}

ethernet _first_ {
        format_up = "E: %speed"
        format_down = ""
}

battery all {
        format = "B: %percentage %remaining %status"
        format_down = ""
        status_chr = "+"
        status_bat = "-"
        status_unk = "?"
        status_full = "="
        integer_battery_capacity = "true"
        # color red when less than 60 minutes left
        low_threshold = "60"
        threshold_type = "time"
}

disk "/" {
        format = "D: %percentage_used (%used)"
        low_threshold = "10"
        threshold_type = "percentage_avail"
}

load {
        format = "L: %1min"
}

cpu_usage {
        format = "C: %usage"
        degraded_threshold = "80"
        max_threshold = "90"
}

memory {
        format = "M: %percentage_used (%used)"
        threshold_degraded = "1G"
        threshold_critical = "500M"
}

tztime local {
        format = "%Y-%m-%d %I:%M %p"
}
