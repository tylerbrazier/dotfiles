[user]
  name = Tyler Brazier
  email = tyler@tylerbrazier.com

[core]
  editor = vim

[fetch]
  prune = true

[rebase]
  autostash = true

[push]
  default = simple

[blame]
  date = short

[alias]
  s = status
  a = add --all   # -p to add changes interactively
  c = commit -v
  co = checkout   # -b <new-branch> to create and checkout a new branch
  l = log --stat  # -p to see diff
  d = diff
  r = remote
  b = branch      # -avv to see all branches
  f = fetch --all
  m = merge
  rb = rebase     # -i <commit> to interactively rebuild commits since <commit>
  rs = reset
  rsh = reset --hard
  ss = stash save
  sl = stash list --stat  # -p to see diff
  sp = stash pop
  sa = stash apply
  sd = stash drop
  down = "!git fetch && git rebase --autostash FETCH_HEAD"
  up = "!f(){ git push -u $@ origin $(git symbolic-ref -q --short HEAD); };f"
  out = "!f(){ git branch -D $1; git push --delete origin $1; };f"
