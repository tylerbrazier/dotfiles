[user]
  name = Tyler Brazier
  email = tyler@tylerbrazier.com

[core]
  editor = vim

[fetch]
  prune = true

[push]
  default = simple

[blame]
  date = short

[alias]
  s = status
  a = add         # -p to add changes interactively
  A = add -A      # stage all changes
  c = commit -v
  co = checkout   # -b <new-branch> to create and checkout a new branch
  l = log --stat  # -p to see diff
  d = diff
  r = remote
  b = branch      # -avv to see all branches
  f = fetch --all
  m = merge
  rb = rebase
  rs = reset
  ss = stash save
  sl = stash list --stat  # -p to see diff
  sp = stash pop
  sa = stash apply
  sd = stash drop
  up = "!f(){ git push -u $@ origin $(git symbolic-ref -q --short HEAD); };f"
  down = "!f(){ git ss 'down' && git pull --ff-only $@; git sp; };f"
  out = "!f(){ git branch -D $1; git push --delete origin $1; };f"
