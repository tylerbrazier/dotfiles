[user]
  name = Tyler Brazier
  email = tyler@tylerbrazier.com

[core]
  editor = vim

[fetch]
  prune = true

[push]
  default = simple
  followTags = true

[blame]
  date = short

[alias]
  s = status
  a = add --all   # -p to add changes interactively
  c = commit -v
  co = checkout   # -b <new-branch> to create and checkout a new branch
  cl = clean -f -d
  l = log --stat  # -p to see diff
  b = branch      # -avv to see all branches
  d = diff
  f = fetch --all
  m = merge
  r = remote -v
  rb = rebase     # -i <commit> to interactively rebuild commits since <commit>
  rs = reset
  rsh = reset --hard
  ss = stash save
  sl = stash list --stat  # -p to see diff
  sp = stash pop
  sa = stash apply
  sd = stash drop
  up = push --set-upstream
  down = pull --rebase --autostash
  out = "!f(){ git branch -D $1; git push --delete origin $1; };f"
