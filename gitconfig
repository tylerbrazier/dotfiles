[user]
  name = Tyler Brazier
  email = tyler@tylerbrazier.com

[core]
  editor = vim

[diff]
  tool = vimdiff

[fetch]
  prune = true

[push]
  default = simple

[blame]
  date = short

[alias]
  a = add -A
  b = branch
  c = commit -v
  co = checkout
  d = diff
  dt = difftool
  f = fetch --all
  l = log --stat
  ll = log --stat --patch
  m = merge
  p = pull --ff-only
  r = remote
  rb = rebase
  rs = reset
  s = status
  sa = stash apply
  sd = stash drop
  sl = stash list --stat
  sll = stash list --stat --patch
  sp = stash pop
  ss = stash save
  out = "!f() { git branch -D $1; git push --delete origin $1; }; f"
  up = "!f() { git push -u origin $(git symbolic-ref -q --short HEAD); }; f"
  shove = "!f() { git push -fu origin $(git symbolic-ref -q --short HEAD); }; f"
