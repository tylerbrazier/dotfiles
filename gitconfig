[user]
	name = Tyler Brazier
	email = tyler@brazier.us

[alias]
	s = status --show-stash
	a = add -A
	c = commit -v
	co = checkout
	cl = clean -f -d
	l = log --stat
	b = branch
	d = diff
	f = fetch --all --prune
	m = merge
	r = remote -v
	rb = rebase
	rs = restore

	sp = stash push --message
	so = stash pop  # out/obtain (like vim's `do`)
	sa = stash apply
	sl = stash list --stat
	sd = stash drop

	up = push -u
	down = pull --rebase --autostash

	# deletes branch locally and on remote
	out = "!f() { git branch -D $1; git push --delete origin $1; }; f"

	# deletes all old local branches where the upstream branch was deleted
	bent = "!git f && git b -vv | awk '/: gone]/{print $1}' | xargs git b -d"
